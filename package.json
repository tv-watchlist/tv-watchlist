{
  "name": "tv-watchlist",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "git:version": "ts-node git-version.ts",
    "build:pwa:prod": "yarn run git:version && ng build --configuration production",
    "build:pwa:prod:watch": "ng build pwa --configuration production --watch",
    "build:ext:watch": "ng build webextension --watch",
    "build:lib:watch": "ng build common --watch",
    "run:pwa": "http-server -p 4200 -c-1 dist/pwa",
    "dev:pwa": "run-p build:pwa:prod:watch run:pwa",
    "deploy": "npx gh-pages -d dist/pwa"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.14",
    "@angular/common": "^19.2.14",
    "@angular/compiler": "^19.2.14",
    "@angular/core": "^19.2.14",
    "@angular/forms": "^19.2.14",
    "@angular/platform-browser": "^19.2.14",
    "@angular/platform-browser-dynamic": "^19.2.14",
    "@angular/router": "^19.2.14",
    "@angular/service-worker": "^19.2.14",
    "angular-animations": "^0.11.0",
    "dotenv": "16.0.3",
    "hammerjs": "^2.0.8",
    "idb": "7.1.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.4.1",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.15",
    "@angular/cli": "^19.2.15",
    "@angular/compiler-cli": "^19.2.14",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.8",
    "@types/node": "^18.11.16",
    "autoprefixer": "^10.4.13",
    "git-rev-sync": "3.0.2",
    "http-server": "14.1.1",
    "ng-packagr": "^19.2.2",
    "npm-run-all": "4.1.5",
    "postcss": "^8.4.20",
    "protractor": "~7.0.0",
    "tailwindcss": "^3.2.4",
    "ts-node": "~10.9.1",
    "typescript": "~5.8.3",
    "webextension-polyfill": "^0.10.0"
  }
}